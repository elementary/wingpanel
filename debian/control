Package: wingpanel
Architecture: any
Depends: libwingpanel-3.0-0 (= ${binary:Version}),
         ${misc:Depends},
         ${shlibs:Depends}
Recommends: wingpanel-indicator-bluetooth,
            wingpanel-indicator-datetime,
